<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">


      <h2>Edit <%= @user.name %></h2>

      <%= simple_form_for(@user, url: user_path(@user), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <%= f.input :firstname, required: false, autofocus: true %>
          <%= f.input :lastname, required: false %>
          <%= f.input :name, required: true %>
          <%= f.input :phone_number, required: true %>
          <%= f.input :description, required: false %>
          <%= f.input :picture, required: false %>
          <%= f.input :email, required: true %>
          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>

    </div>
  </div>
</div>