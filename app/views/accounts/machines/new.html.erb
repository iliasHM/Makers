 <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center"> Add a new machine </h1>
    </div>
  </div>
<div class="container light-padded">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form_new_machine' %>
      </div>
    </div>
  </div>
</div>

<%= content_for :after_js do %>
  <% javascript_tag do %>
    $(document).ready(function() {
      $('#machine_category').on('change', function() {
        var c = $('#machine_category').val();
        $('#category_id').val(c);
        $('#category_id_form').trigger('submit');
      });
    });
  <% end %>
<% end %>